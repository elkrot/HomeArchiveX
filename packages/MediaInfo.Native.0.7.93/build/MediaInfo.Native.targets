<?xml version="1.0" encoding="utf-8"?> 
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003"> 
  <Target Name="AfterBuild"> 
    <ItemGroup> 
      <MediaInfoNativeFiles Include="$(MSBuildThisFileDirectory)native\$(PlatformName)\*.*"/> 
    </ItemGroup> 
    <ItemGroup Condition="'$(Platform)'=='' Or '$(Platform)'=='AnyCPU'"> 
      <MediaInfoNativeFiles Include="$(MSBuildThisFileDirectory)native\x86\*.*"/> 
    </ItemGroup> 
    <Copy SourceFiles="@(MediaInfoNativeFiles)" 
DestinationFolder="$(OutputPath)" > 
    </Copy> 
  </Target> 
</Project>