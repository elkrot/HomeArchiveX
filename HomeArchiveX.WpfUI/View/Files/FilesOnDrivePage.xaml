<Page x:Class="HomeArchiveX.WpfUI.View.FilesOnDrivePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:view="clr-namespace:HomeArchiveX.WpfUI.View"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Файлы на диске" FontSize="{StaticResource DefaultFontSize}">

    <Grid Background="YellowGreen">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <!--Navigation-->
        <view:FilesOnDriveNavigationView DataContext="{Binding FileOnDriveNavigationViewModel}" Grid.Row="2" Margin="0,10,0,0"/>
    </Grid>
</Page>
