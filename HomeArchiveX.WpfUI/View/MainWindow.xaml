<Window x:Class="HomeArchiveX.WpfUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeArchiveX.WpfUI"
        xmlns:view="clr-namespace:HomeArchiveX.WpfUI"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Window.Resources>
        <xctk:Wizard x:Key="_wizard" FinishButtonClosesWindow="True" Help="OnWizardHelp">
            <xctk:WizardPage Title="Добро пожаловать"
                             Description="Этот помошник поможет создать описание дирректории." >
                
                </xctk:WizardPage>
            <xctk:WizardPage PageType="Interior"
                             Title="Страница 1"
                             Description="Первый шаг процесса." >
                <Grid>
                    <StackPanel>
                        <TextBox Text="{Binding DriveLetter}"/>
                        <TextBox  Text="{Binding MaxImagesInDirectory}"/>
                        <TextBox  Text="{Binding IsSecret}"/>
                        <!--<CheckBox Checked="{Binding IsSecret}" />-->
                    </StackPanel>
                </Grid>
            </xctk:WizardPage>
            <xctk:WizardPage PageType="Interior"
                             Title="Page 2"
                             Description="Это второй шаг процесса" CanFinish="True">
                <StackPanel>
                    <TextBox Text="{Binding DriveTitle}"/>
                    <TextBox  Text="{Binding DriveCode}"/>
                </StackPanel>

            </xctk:WizardPage>

        </xctk:Wizard>
    </Window.Resources>
    <Grid ShowGridLines="False"  Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ToolBarTray HorizontalAlignment="Left" Height="50" 
                      Margin="0,10,0,0" VerticalAlignment="Top" Width="230" Grid.Column="1" Grid.Row="0">
            <ToolBar Height="50" VerticalAlignment="Top" Margin="0,0,-515,0">
                <Button Click="Button_Click_1" VerticalAlignment="Top" Height="40" >
                    <Image Source="/HomeArchiveX.WpfUI;component/img/drive_add.png" Width="50" Margin="0"/>

                </Button>
                <Separator />
                <Button Click="Button_Click">
                    <Image Width="50" Margin="0" Source="/HomeArchiveX.WpfUI;component/img/drive_link.png"/>
                </Button>
                <Separator />
                <Button>
                    <Image Source="/HomeArchiveX.WpfUI;component/img/drive_network.png" Width="50" Margin="0"/>
                </Button>
                <Separator />
                <Button>

                </Button>

                <Button >
                    <Image Width="50" Margin="0" Source="/HomeArchiveX.WpfUI;component/img/drive.png"/>
                </Button>
                <TextBox Foreground="LightGray" Width="100">Поиск...</TextBox>
            </ToolBar>
            
        </ToolBarTray>
        <Frame x:Name="Main" Margin="0,0,0,0" Grid.Row="1"/>
    </Grid>
</Window>
